@model PhoneUserKICB.PL.Models.ViewModels.PhoneViewModel

@{
    ViewData["Title"] = "Add New Phone";
}

<div class="container py-5">
    <h1 class="text-center text-primary fw-bold mb-4">@ViewData["Title"]</h1>

    <form asp-action="Create" method="post">
        <div class="form-group mb-4">
            <label asp-for="PhoneNumber" class="control-label text-primary fs-4 fw-bold"></label>
            <input asp-for="PhoneNumber" class="form-control form-control-lg" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="UserId" class="control-label text-primary fs-4 fw-bold"></label>
            <select asp-for="UserId" class="form-control form-control-lg" asp-items="@(new SelectList(ViewBag.Users, "Id", "Name"))">
                <option value="">Select User</option>
            </select>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary btn-lg fw-bold">Save</button>
            <a href="@Url.Action("Index", "Phone")" class="btn btn-secondary btn-lg fw-bold">Cancel</a>
        </div>
    </form>
</div>