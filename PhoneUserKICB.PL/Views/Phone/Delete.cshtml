@model PhoneUserKICB.PL.Models.ViewModels.PhoneViewModel

@{
    ViewData["Title"] = "Delete Phone";
}

<div class="container py-5">
    <h1 class="text-center text-primary fw-bold mb-4">@ViewData["Title"]</h1>

    <h3 class="text-center mb-4">Are you sure you want to delete this phone?</h3>

    <div class="mb-4">
        <b class="text-primary">Phone Number:</b> @Model.PhoneNumber
    </div>

    <form asp-action="Delete" method="post" class="text-center">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-center gap-3">
            <button type="submit" class="btn btn-danger btn-lg fw-bold">Delete</button>
            <a href="@Url.Action("Index", "Phone")" class="btn btn-secondary btn-lg fw-bold">Cancel</a>
        </div>
    </form>
</div>