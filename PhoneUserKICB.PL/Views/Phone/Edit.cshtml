@model PhoneUserKICB.PL.Models.ViewModels.PhoneViewModel

@{
    ViewData["Title"] = "Edit Phone";
}

<div class="container py-5">
    <h1 class="text-center text-primary fw-bold mb-4">@ViewData["Title"]</h1>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-4">
            <label asp-for="PhoneNumber" class="form-label fs-4 text-primary fw-bold"></label>
            <input asp-for="PhoneNumber" class="form-control fs-4" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="UserId" class="form-label fs-4 text-primary fw-bold"></label>
            <select asp-for="UserId" class="form-control fs-4" asp-items="@(new SelectList(ViewBag.Users, "Id", "Name"))">
                <option value="">Select User</option>
            </select>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-center gap-3">
            <button type="submit" class="btn btn-success btn-lg fw-bold">Save Changes</button>
            <a href="@Url.Action("Index", "Phone")" class="btn btn-secondary btn-lg fw-bold">Cancel</a>
        </div>
    </form>
</div>