@using PhoneUserKICB.PL.Models.ViewModels;
@model PhoneListViewModel

<h1>Phones</h1>
<a asp-action="Create">Add New Phone</a>
<table>
    <thead>
        <tr>
            <th>Phone Number</th>
            <th>User Name</th>
            <th>User Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var phone in Model.Phones)
        {
            <tr>
                <td>@phone.PhoneNumber</td>
                <td>@phone.UserName</td> <!-- Имя пользователя -->
                <td>@phone.UserEmail</td> <!-- Почта пользователя -->
                <td>
                    <a asp-action="Detail" asp-route-id="@phone.Id">Detail</a> |
                    <a asp-action="Edit" asp-route-id="@phone.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@phone.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage - 1 })">&laquo;</a>
            </li>
        }

        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage + 1 })">&raquo;</a>
            </li>
        }
    </ul>
</nav>