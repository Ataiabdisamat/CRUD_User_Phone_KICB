@model PhoneUserKICB.PL.Models.ViewModels.UserViewModel

<div class="container py-5">
    <h2 class="text-center text-primary fw-bold mb-4">@ViewData["Title"]</h2>

    <form asp-action="Create" method="post">
        <div class="form-group mb-4">
            <label asp-for="Name" class="form-label fs-4 fw-bold text-primary"></label>
            <input asp-for="Name" class="form-control fs-4 py-3" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Email" class="form-label fs-4 fw-bold text-primary"></label>
            <input asp-for="Email" class="form-control fs-4 py-3" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="DateOfBirth" class="form-label fs-4 fw-bold text-primary">Date of birth</label>
            <input asp-for="DateOfBirth" class="form-control fs-4 py-3" type="date" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary btn-lg fw-bold fs-5 px-4 py-3">Create</button>
        </div>
    </form>

    <div class="mt-4 text-center">
        <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg fw-bold fs-5 px-4 py-3">Back to list</a>
    </div>
</div>