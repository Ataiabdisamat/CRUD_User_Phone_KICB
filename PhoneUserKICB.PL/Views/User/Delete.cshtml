@model PhoneUserKICB.PL.Models.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Delete User";
}

<div class="container py-5">
    <h1 class="text-center text-primary fw-bold mb-4">@ViewData["Title"]</h1>

    <h3 class="text-center text-danger mb-4">Are you sure you want to delete this user?</h3>

    <div class="mb-3 fs-4">
        <b>Name:</b> @Model.Name
    </div>
    <div class="mb-3 fs-4">
        <b>Email:</b> @Model.Email
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        
        <div class="d-flex justify-content-center gap-4">
            <button type="submit" class="btn btn-danger btn-lg fw-bold fs-5 px-4 py-3">Delete</button>

            <a href="@Url.Action("Index", "User")" class="btn btn-secondary btn-lg fw-bold fs-5 px-4 py-3">Cancel</a>
        </div>
    </form>
</div>