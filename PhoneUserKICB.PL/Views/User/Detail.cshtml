@model PhoneUserKICB.PL.Models.ViewModels.UserViewModel

<div class="container py-5">
    <h2 class="text-center text-primary fw-bold mb-4">User Details</h2>

    <div class="fs-4 mb-3">
        <strong class="text-primary">Name:</strong> @Model.Name
    </div>
    <div class="fs-4 mb-3">
        <strong class="text-primary">Email:</strong> @Model.Email
    </div>
    <div class="fs-4 mb-3">
        <strong class="text-primary">Date of Birth:</strong> @Model.DateOfBirth.ToShortDateString()
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg fw-bold">Back to list</a>
    </div>
</div>