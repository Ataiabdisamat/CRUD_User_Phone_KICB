@model PhoneUserKICB.PL.Models.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Edit User";
}

<div class="container py-5">
    <h2 class="text-center text-primary fw-bold mb-4">Edit User</h2>

    <form asp-action="Edit" method="post">
        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label fw-bold text-primary"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Email" class="form-label fw-bold text-primary"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="DateOfBirth" class="form-label fw-bold text-primary">Date of birth</label>
            <input asp-for="DateOfBirth" class="form-control" type="date" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-lg fw-bold">Save Changes</button>
    </form>

    <div class="mt-4 text-center">
        <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg fw-bold">Back to list</a>
    </div>
</div>